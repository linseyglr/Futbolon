<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeagueActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleLeague"
            android:layout_centerInParent="true"
            android:fontFamily="serif-monospace"
            android:textColor="@color/colorRojoOscuro"
            android:textStyle="bold"
            android:textSize="@dimen/titlesize"/>
            />
    </RelativeLayout>

    <View
        android:layout_below="@id/relative"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="3dp"

        android:background="@color/colorVerde"/>

    <ExpandableListView
            android:id="@+id/expandableList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/marginTop"
            android:divider="@color/colorNegro"
            android:textColor="@color/colorNegro"
            android:dividerHeight="3dp"
            android:childDivider="@color/colorverdeclaro"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            >

    </ExpandableListView>

</RelativeLayout>